(defwidget bigpowermenu []
  (box :orientation "v"
       :space-evenly true
       :class "bigpowermenu"
       :halign "center"
       :valign "center"
       :spacing 20
       :onclick "eww close bigpowermenu"
    (button :style "color: #FF5555; border-radius: 3px;" :class "shutdown" :onclick "systemctl poweroff" "")
    (button :style "color: #FF5555; border-radius: 3px;" :class "reboot" :onclick "systemctl reboot" "")
  )
)

