(defwidget bigpowermenu []
  (box :orientation "h"
       :space-evenly true
       :class "bigpowermenu"
       :halign "center"
       :valign "center"
       :spacing 80
       :onclick "eww close bigpowermenu"  ;; Add this line
    (button :style "color: #FF5555;" :class "shutdown" :onclick "systemctl poweroff" "")
    (button :style "color: #FF5555;" :class "reboot" :onclick "systemctl reboot" "")
  )
)

